{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "dist",
		"module": "commonjs",
		"sourceMap": true,
		"strict": true
	},
	"exclude": [
		"node_modules"
	],
	"files": [
		"src/index.ts"
	],
	"typedocOptions": {
		"excludeExternals": true,
		"excludeNotExported": true,
		"excludePrivate": true,
		"inputFiles": ["src"],
		"mode": "modules",
		"out": "docs"
	}
}
